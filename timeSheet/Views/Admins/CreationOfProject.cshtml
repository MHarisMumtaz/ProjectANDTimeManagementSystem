@{
    ViewBag.Title = "CreationOfProject";
    Layout = "~/Views/Shared/_user.cshtml";
}
@model timeSheet.Models.Project

<div class="module message">
    <div class="module-head">
        <h3>Project Creation</h3>
    </div>
    <div class="module-body" style="padding-left: 7%; padding-top: 6%;">

        @if (timeSheet.Models.Project.IsProjectCreated)
        {
            <script>alert("Project has been Successfully Created.");</script>
        }

        @using (Html.BeginForm("CreateProject", "Admins", FormMethod.Post, new { @class = "form-horizontal row-fluid" }))
        {
            <div style="margin-bottom: 2%;">
              <label class="control-label">Project</label>
                 
                <div class="controls">
                  
<input type="text" class="span8" required id="projectname" name="projectname" />
                </div>

            </div>

    <div style="margin-bottom: 2%;">
        <label class="control-label">Project Template</label>

        <div class="controls">

            <input type="text" class="span8" required name="projecttemplate" />
        </div>

    </div>

    <div style="margin-bottom: 2%;">
        <label class="control-label">Start Date</label>

        <div class="controls">

            <input type="date" class="span8" name="startdate" id="startdate" required />
        </div>

    </div>


    <div style="margin-bottom: 2%;">
        <label class="control-label">End Date</label>

        <div class="controls">

            <input type="date" class="span8" name="enddate" id="enddate" required />
        </div>

    </div>
            


            <div style="margin-bottom:2%;">
                <div class="controls">
                    <button type="submit" class="btn btn-large btn-primary">Save</button>
                </div>
            </div>
            }
        </div>
    <div class="module-foot">
    </div>
</div>
