@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_MPage.cshtml";
}

@model timeSheet.Models.Users
<div class="row" style="margin-top: 5%; margin-left: 3%; margin-bottom: 14%;">
    <div class="module module-login span4 offset4">
        @using (Html.BeginForm("Login", "Logins", FormMethod.Post, new { @class = "form-vertical" }))
        {

            <div class="module-head">
                <h3>Sign In</h3>
            </div>
            <div class="module-body">
               

                <div class="control-group">
                    <div class="controls row-fluid">
                        
                        @Html.LabelFor(model => model.UserID, new { @class = "control-label" })
                        @Html.TextBoxFor(model => Model.UserID, new { @class = "span12", @id = "userid", @name="userid", @type = "text", @required = "required" })






                    </div>

                    <br />
                    <div class="controls row-fluid">
                       
                        
                        @Html.LabelFor(model => model.UserPassword, new { @class = "control-label" })
                        @Html.TextBoxFor(model => Model.UserPassword, new { @class = "span12", @id = "password", @name = "password", @type = "password", @required = "required" })




                    </div>
                </div>
            </div>
            <div class="module-foot">
                <div class="control-group">
                    <div class="controls clearfix">
                        <button type="submit" class="btn btn-primary pull-right">Login</button>
                    </div>
                </div>

            </div>
        }

    </div>
</div>
